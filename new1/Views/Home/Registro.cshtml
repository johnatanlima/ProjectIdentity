@model new1.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Registro";
}

<h2> Registro </h2>

<form asp-action="Registro" asp-controller="Home">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Nome" ></label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" />
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Idade"></label>
        <input asp-for="Idade" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Senha"></label>
        <input asp-for="Senha" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
</form>