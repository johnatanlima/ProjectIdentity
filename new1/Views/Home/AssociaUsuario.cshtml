    ViewData["Title"] = "Associa Usuário";
}

<h3> Atribuir permissões à usuários</h3>

<form asp-action="AssociaUsuario">
  <div>
      <label asp-for="UsuarioId"> </label>
      <select asp-for="UsuarioId" asp-items="ViewBag.UsuarioId"></select>
  </div>

  <div>
      <label asp-for="NivelAcessoId"> </label>
